{
  // Files
  "files.defaultLanguage": "markdown",
  "files.trimTrailingWhitespace": true,
  // Editor Settings
  "editor.fontFamily": "Cascadia Code, Operator Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 25,
  "editor.letterSpacing": 0.5,
  "editor.fontWeight": "400",
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "editor.cursorWidth": 5,
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.formatOnSaveTimeout": 5000,
  "editor.tabCompletion": "on",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "editor.scrollBeyondLastLine": true,
  "editor.wordWrap": "on",
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[vue]": {
    "editor.formatOnSave": false
  },
  // "ruby.lint": {
  //   "rubocop": true
  // },
  // "ruby.format": "rubocop",
  // Workbench
  "workbench.settings.editor": "json",
  "workbench.fontAliasing": "default",
  "workbench.editor.enablePreview": false,
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": true,
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "welcomePage",
  "workbench.editor.tabCloseButton": "right",
  "workbench.colorTheme": "Night Owl",
  // Search
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "android": true,
    "ios": true,
    "vendor": true
  },
  // Git
  "git.enableSmartCommit": true,
  // Window
  "window.title": "${activeEditorFull}${separator}${rootName}${dirty}",
  "window.openFilesInNewWindow": "on",
  // Bracket Pair Plugin
  "bracket-pair-colorizer-2.colors": [
    "#9575CD",
    "#F06292",
    "#4DD0E1"
  ],
  "bracket-pair-colorizer-2.forceUniqueOpeningColor": false,
  "bracket-pair-colorizer-2.forceIterationColorCycle": false,
  "bracket-pair-colorizer-2.highlightActiveScope": true,
  "editor.matchBrackets": false,
  "bracket-pair-colorizer-2.activeScopeCSS": [
    "opacity: 0"
  ],
  "bracket-pair-colorizer-2.showBracketsInGutter": false,
  "bracket-pair-colorizer-2.showBracketsInRuler": false,
  "bracket-pair-colorizer-2.showVerticalScopeLine": true,
  "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
  "bracket-pair-colorizer-2.scopeLineCSS": [
    "borderStyle : solid",
    "borderWidth : 2px",
    "borderColor : {color}",
    "opacity: 0.5"
  ],
  // Terminal
  "terminal.integrated.rendererType": "dom",
  "diffEditor.renderSideBySide": false,
  // Import Cost
  "importCost.typescriptExtensions": [
    "\\.vue?$"
  ],
  // Javascript
  "javascript.updateImportsOnFileMove.enabled": "always",
  // Eslint
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "vue",
      "autoFix": true
    }
  ],
  // Vue
  "vetur.validation.template": false,
